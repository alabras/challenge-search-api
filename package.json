{
  "name": "search-challenge-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d build --copy-files",
    "start": "npm run clean && npm run build && node build/app.js",
    "watch": "nodemon",
    "clean": "rm -rf ./build",
    "test": "jest --testPathIgnorePatterns build/ node_modules/ --watchAll",
    "test-unit-ci": "npm run test -- --watchAll=false --coverage",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "mutation": "stryker run",
    "awesome": "npm run test-unit-ci && npm run lint",
    "docker:build": "docker build -t search-challenger-api:latest .",
    "snyk:auth": "if [ -z ${SNYK_TOKEN+x} ]; then echo 'Debe configurar variable de entorno SNYK_TOKEN. Ej: export SNYK_TOKEN=XXXX' && exit 1; fi && snyk auth $SNYK_TOKEN",
    "snyk:package": "npm run snyk:auth && snyk test",
    "snyk:docker": "npm run docker:build && npm run snyk:auth && snyk container test search-challenger-api:latest --file=Dockerfile"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "memory-cache": "^0.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@stryker-mutator/core": "^5.1.1",
    "@stryker-mutator/jest-runner": "^5.1.1",
    "babel-jest": "^27.0.5",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.0.5",
    "jest-junit": "^12.2.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "snyk": "^1.646.0",
    "supertest": "^6.1.3"
  },
  "jest": {
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "src/server.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./reports/junit",
    "outputName": "junit-${uuid}.xml",
    "uniqueOutputName": "true",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
